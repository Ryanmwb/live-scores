<!DOCTYPE html>
<html lang="en">
    <% 
        var api = require('sports-live');
        var sport 
    %>

  <% include ../static/partials/head.ejs %>
  <body>
    <% include ../static/partials/topNav.ejs %>
    <% include ../static/partials/messages.ejs %>
      <!-- Page Content -->
      <main class="container mt-5 justify-content-center">
            <h1 class="display-1">Chat Show Page</h1>
            <h2><%= chat.team1 %> Vs. <%= chat.team2 %></h2>
            <h2>Score --> </h2>
            <h4>Messages</h4>
            <ul class="list-group"></ul>
                <% messages.forEach((message) => { %>
                    <li class="list-group-item">
                         <%= message.message %>
                    </li>
                <% }) %>
            </ul>
            <% if(currentUser){ %>
            <form method="post" action="/<%= sport %>/<%= chat.id %>/<%= chat.team1 %>/<%= chat.team2 %>/message/create">
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea rows="4" class="form-control" name="message" placeholder="Enter Message Here"></textarea>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } else { %> 
                <h1>Must be signed in to create message</h1>
            <% } %>
      </main>
      <!-- /.container -->
      <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>