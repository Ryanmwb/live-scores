<!DOCTYPE html>
<html lang="en">

  <% include ../static/partials/head.ejs %>
  <body id="<%= sport %>-body">
    <% include ../static/partials/topNav.ejs %>
    <% include ../static/partials/messages.ejs %>
      <!-- Page Content -->
      <main class="container mt-5 justify-content-center">
            <div class="row text-light">
                <h3 class="m-0 p-0 display-3 col-5 text-right align-middle"><%= game.team1 %></h3>
                <h5 class="m-0 p-0 display-3 col-2 text-center align-middle "><%= game.score %></h5>
                <h3 class="m-0 p-0 display-3 col-5 text-left align-middle"><%= game.team2 %></h3>
            </div>
            <h4>Messages</h4>
            <ul class="list-group"></ul>
                <% if(messagess != null){ messagess.forEach((message) => { %>
                    <li class="list-group-item">
                         <%= message.message %>
                    </li>
                <% })  }%>
            </ul>
            <% if(currentUser){ %>
            <form method="post" action="/<%= sport %>/<%= chat.id %>/<%= chat.team1 %>/<%= chat.team2 %>/message/create">
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea rows="4" class="form-control" name="message" placeholder="Enter Message Here"></textarea>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } else { %> 
                <h1>Must be signed in to create message</h1>
            <% } %>
      </main>
      <!-- /.container -->
      <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>